{{#if url}}

    <form action="/editar/{{url._id}}" method="post">
        {{!-- csrfToken agrega un token a nuestro formulario --}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <input type="text" value="{{url.origin}}" placeholder="ingrese la url" name="origin" class="form-control my-">
        <button type="submit" class="btn btn-warning w-100 mb-2">Editar URL</button>
    </form>

{{else}}

    <form action="/" method="post">
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <input type="text" placeholder="ingrese la url" name="origin" class="form-control my-">
        <button type="submit" class="btn btn-primary w-100 mb-2">Agregar URL</button>
        {{#each mensajes }}
            <div class="alert alert-dark mb-2">{{this.msg}}</div>
        {{/each}} 
    </form>


{{/if}}

